                <phase>package</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>grunt</executable>
                  <arguments>
                    <argument>reload</argument>
                    <argument>watch</argument>
                    <argument>--webapp_outdir</argument>
                    <argument>${webapp-outdir}</argument>
                    <argument>--webapp_port</argument>
                    <argument>${jettyPort}</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>


