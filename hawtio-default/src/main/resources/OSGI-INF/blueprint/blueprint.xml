<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0">

  <ext:property-placeholder>
    <ext:default-properties>
      <ext:property name="hawtio.log.buffer.size" value="2000"/>
    </ext:default-properties>
  </ext:property-placeholder>

  <bean id="logFacade" class="io.fabric8.insight.log.log4j.Log4jLogQuery" init-method="start" destroy-method="stop" scope="singleton">
    <property name="size" value="${hawtio.log.buffer.size}"/>
  </bean>
</blueprint>

