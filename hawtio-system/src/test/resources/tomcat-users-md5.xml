<tomcat-users xmlns="http://tomcat.apache.org/xml">
    <!-- https://tomcat.apache.org/tomcat-11.0-doc/config/credentialhandler.html#MessageDigestCredentialHandler -->
    <!-- check bin/digest.sh -a md5 [-i ic] [-s salt-length] password -->
    <!-- org.apache.catalina.realm.DigestCredentialHandlerBase.DEFAULT_SALT_LENGTH is 32 -->

    <!-- a hex encoded digest of the password digested using the configured digest -->
    <user username="u1" password="1b359d8753858b55befa0441067aaed3" roles="r1,r2" groups="g1" />
    <!-- a Base64 encoded MD5 digest of the password -->
    <user username="u2" password="{MD5}GzWdh1OFi1W++gRBBnqu0w==" roles="r1,r2" groups="g1" />
    <!-- a Base64 encoded SHA1 digest of the password -->
    <user username="u3" password="{SHA}U2wLM5NFYWwbM8r0VEVNi4oZDWw=" roles="r1,r2" groups="g1" />
    <!-- 20 character of SHA-1 digest of password+salt followed by remaining bytes of the salt, Base64 encoded -->
    <user username="u4" password="{SSHA}OJfhvk+T+IAv5XpLgIqsZZwwmQSsCJbHYqvS9y0D1ui9Si6fNX1mWR75bGW6K4+L7j8GSFFktUE9Qw==" roles="r1,r2" groups="g1" />
