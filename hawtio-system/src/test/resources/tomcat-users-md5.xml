    <user username="u5" password="e74212ae5fb0b6248bb48c5e0c615bf54997757e43f40eb0201a732c695a6883ca4019cb6fdfc399$20$384826363541f4a9e1c0efab604c0c23" roles="r1,r2" groups="g1" />
