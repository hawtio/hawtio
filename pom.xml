<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.fusesource</groupId>
    <artifactId>fuse-project</artifactId>
    <version>7.1.0.fuse-038</version>
  </parent>

  <groupId>org.fusesource.console</groupId>
  <artifactId>project</artifactId>
  <packaging>pom</packaging>
  <version>7.1.0-SNAPSHOT</version>
  <name>Fuse Console</name>
  <url>http://fuse.fusesource.org/</url>

  <organization>
    <name>FuseSource</name>
    <url>http://fusesource.com</url>
  </organization>


  <prerequisites>
    <maven>3.0.2</maven>
  </prerequisites>

  <properties>
    <forge-project-id>console</forge-project-id>
<!--
      <fabric-version>99-master-SNAPSHOT</fabric-version>
-->
    <fabric-version>7.1.0.fuse-038</fabric-version>
    <fmc-version>${fabric-version}</fmc-version>
  </properties>

  <repositories>
    <repository>
      <id>release.fusesource.org</id>
      <name>FuseSource Release Repository</name>
      <url>http://repo.fusesource.com/nexus/content/repositories/releases</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
    <repository>
      <id>ea.fusesource.org</id>
      <name>FuseSource Early Access Repository</name>
      <url>http://repo.fusesource.com/nexus/content/groups/ea</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>release.fusesource.org</id>
      <name>FuseSource Release Repository</name>
      <url>http://repo.fusesource.com/nexus/content/repositories/releases</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
    <pluginRepository>
      <id>ea.fusesource.org</id>
      <name>FuseSource Early Access Repository</name>
      <url>http://repo.fusesource.com/nexus/content/groups/ea</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>

  <modules>
    <module>web-console</module>
  </modules>

  <build>
    <defaultGoal>install</defaultGoal>
  </build>
</project>
