<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0">

    <ext:property-placeholder>
        <ext:default-properties>
            <ext:property name="schemaPath" value="${hawtio.config.dir}"/>
        </ext:default-properties>
    </ext:property-placeholder>

    <bean id="jaxbDataFormat" class="org.fusesource.fabric.jaxb.dynamic.DynamicJaxbDataFormat">
        <property name="compiler" ref="fileJaxbCompiler"/>
    </bean>

    <bean id="fileJaxbCompiler" class="org.fusesource.fabric.jaxb.dynamic.file.FileWatcherDynamicCompiler" init-method="init" destroy-method="destroy">
        <property name="rootPath" value="${schemaPath}"/>
    </bean>
</blueprint>
